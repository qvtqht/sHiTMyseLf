SELECT
	item_title,
	item_flat.author_key AS author_id,
	add_timestamp,
	tags_list,
	file_hash
FROM 
	item_flat
	LEFT JOIN author_score ON (item_flat.author_key = author_score.author_key)
WHERE
	(item_score * author_score) > 0 AND
	(item_score + author_score) > 0 AND
	','||tags_list||',' like '%,hastitle,%'
ORDER BY 
	(add_timestamp * item_score) DESC
LIMIT 25


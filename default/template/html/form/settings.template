<!-- settings.template -->
<noscript>
	<p>
		<b>*</b> Some features may need <b>JavaScript</b>.
		<!--
			* getElementById and stuff like that.
			Tested with in IE6+, Presto, Gecko, WebKit, Chrome
		-->
	</p>
</noscript>

<fieldset>
	<legend><b>Settings</b><br></legend>

	<p>
		<label for=chkShowAdvanced>
			<input type=checkbox id=chkShowAdvanced name=chkShowAdmin onchange="if (window.SaveCheckbox) { SaveCheckbox(this, 'show_advanced'); }">
			Show advanced controls<noscript><b>*</b></noscript>
		</label>
	</p>

	<p>
		<label for=chkShowAdmin class=advanced>
			<input type=checkbox id=chkShowAdmin name=chkShowAdmin onchange="if (window.SaveCheckbox) { SaveCheckbox(this, 'show_admin'); }">
			Show operator controls<noscript><b>*</b></noscript>
		</label>
	</p>

	<p>
		<label for=chkDraggable class=advanced>
			<input type=checkbox id=chkDraggable name=chkDraggable onchange="if (window.SaveCheckbox) { SaveCheckbox(this, 'draggable'); }">
			Enable quirky enhancements<noscript><b>*</b></noscript>
		</label>
	</p>
</fieldset>

<fieldset class=advanced>
	<legend><b>Timestamp Format <noscript>*</noscript></b></legend>
	<p>
		<label for=optTimestampsSeconds>
			<input type=radio id=optTimestampsSeconds name=optTimestampsFormat value=seconds onchange="if (window.SaveCheckbox) { SaveCheckbox(this, 'timestamps_format'); }">
			Relative seconds: -86400
		</label>
		<br>
		<label for=optTimestampsAdjusted>
			<input type=radio id=optTimestampsAdjusted name=optTimestampsFormat value=adjusted onchange="if (window.SaveCheckbox) { SaveCheckbox(this, 'timestamps_format'); }">
			Relative adjusted: 1 day ago
		</label>
		<br>
		<label for=optTimestampsExact>
			<input type=radio id=optTimestampsExact name=optTimestampsFormat value=exact onchange="if (window.SaveCheckbox) { SaveCheckbox(this, 'timestamps_format'); }">
			Exact value: 1900-01-01 12:00
		</label>
	</p>
</fieldset>


<fieldset class=advanced>
	<legend><b>Performance Mode</b></legend>
	<p>
		<label for=optPerformanceQuicker>
			<input type=radio id=optPerformanceQuicker name=optPerformanceOptimization value=quicker onchange="if (window.SaveCheckbox) { SaveCheckbox(this, 'performance_optimization'); }">
			Quicker<noscript><b>*</b></noscript><span class=beginner> (computer works harder)<br></span>
		</label>
		<label for=optPerformanceFaster>
			<input type=radio id=optPerformanceFaster name=optPerformanceOptimization value=faster onchange="if (window.SaveCheckbox) { SaveCheckbox(this, 'performance_optimization'); }">
			Faster<span class=beginner> (computer works less)<br></span>
		</label>
		<label for=optPerformanceNone>
			<input type=radio id=optPerformanceNone name=optPerformanceOptimization value=none onchange="if (window.SaveCheckbox) { SaveCheckbox(this, 'performance_optimization'); }">
			None<noscript><b>*</b></noscript><span class=beginner> (computer rests)<br></span>
		</label>
	</p>
</fieldset>



<fieldset>
	<legend><b>Writing</b><br></legend>

	<p>
		<label for=chkWriteEnhance class=advanced>
			<input type=checkbox id=chkWriteEnhance name=chkWriteEnhance onchange="if (window.SaveCheckbox) { SaveCheckbox(this, 'write_enhance'); }">
			Make write box big and blue<noscript><b>*</b></noscript>
		</label>
	</p>

	<p>
		<label for=chkFocusReply class=advanced>
			<input type=checkbox id=chkFocusReply name=chkFocusReply onchange="if (window.SaveCheckbox) { SaveCheckbox(this, 'focus_reply'); }">
			Automatically focus reply field<noscript><b>*</b></noscript>
		</label>
	</p>

	<p>
		<label for=chkSignByDefault class=advanced>
			<input type=checkbox id=chkSignByDefault name=chkSignByDefault onchange="if (window.SaveCheckbox) { SaveCheckbox(this, 'sign_by_default'); }">
			Sign messages by default<noscript><b>*</b></noscript>
		</label>
	</p>

	<p>
		<label for=chkWriteAutoSave>
			<input type=checkbox id=chkWriteAutoSave name=chkWriteAutoSave onchange="if (window.SaveCheckbox) { SaveCheckbox(this, 'write_autosave'); }">
			Auto-save drafts on device<noscript><b>*</b></noscript>
		</label>
	</p>

</fieldset>
<!-- / settings.template -->
